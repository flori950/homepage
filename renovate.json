{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Renovate configuration for ionicons CDN updates",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":semanticCommits"
  ],
  "enabledManagers": ["regex"],
  "assignees": ["flori950"],
  "labels": ["dependencies"],
  "regexManagers": [
    {
      "fileMatch": ["^index\\.html$"],
      "matchStrings": [
        "https://unpkg\\.com/ionicons@(?<currentValue>\\d+\\.\\d+\\.\\d+)/dist/ionicons/ionicons(?:\\.esm)?\\.js"
      ],
      "datasourceTemplate": "npm",
      "depNameTemplate": "ionicons",
      "versioningTemplate": "semver"
    }
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["major"],
      "labels": ["major-update"],
      "automerge": false
    },
    {
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    }
  ],
  "prConcurrentLimit": 2,
  "prHourlyLimit": 1,
  "vulnerabilityAlerts": {
    "enabled": true
  }
}
