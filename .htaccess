# Professional configuration for optimal performance and security
# =============================================================================

# Enable URL Rewriting
RewriteEngine On

# =============================================================================
# HTTPS REDIRECT & URL CLEANUP
# =============================================================================

# Force HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Remove www and force non-www
RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
RewriteRule ^(.*)$ https://%1%{REQUEST_URI} [R=301,L]

# =============================================================================
# SECURITY HEADERS
# =============================================================================
<IfModule mod_headers.c>
    # XSS Protection
    Header always set X-XSS-Protection "1; mode=block"
    
    # Prevent MIME-type sniffing
    Header always set X-Content-Type-Options "nosniff"
    
    # Clickjacking protection
    Header always set X-Frame-Options "DENY"
    
    # Referrer Policy
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    
    # CORS Headers for better third-party integration
    Header always set Access-Control-Allow-Origin "*"
    Header always set Access-Control-Allow-Methods "GET, POST, OPTIONS"
    Header always set Access-Control-Allow-Headers "Content-Type"
    
    # Content Security Policy - Optimized for Google Maps and third-party integrations
    Header always set Content-Security-Policy "default-src 'self'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://maps.googleapis.com; font-src 'self' https://fonts.gstatic.com https://maps.gstatic.com; img-src 'self' data: https: blob: *.googleapis.com *.gstatic.com *.ggpht.com *.googleusercontent.com; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://unpkg.com https://maps.googleapis.com https://maps.gstatic.com; connect-src 'self' https://unpkg.com https://maps.googleapis.com https://maps.gstatic.com; frame-src 'self' https://www.google.com https://maps.google.com; child-src 'self' https://www.google.com https://maps.google.com; object-src 'none'; base-uri 'self'; frame-ancestors 'self';"
    
    # Permissions Policy
    Header always set Permissions-Policy "geolocation=(), microphone=(), camera=(), payment=(), usb=(), magnetometer=(), gyroscope=(), speaker=()"
    
    # HSTS (HTTP Strict Transport Security) - Only enable if you're sure about HTTPS
    Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
    
    # Remove server information
    Header unset Server
    Header always unset X-Powered-By
</IfModule>

# =============================================================================
# BOT AND DDOS PROTECTION
# =============================================================================

# Limit concurrent connections per IP (requires mod_evasive)
<IfModule mod_evasive24.c>
    DOSHashTableSize    2048
    DOSPageCount        10
    DOSPageInterval     1
    DOSSiteCount        50
    DOSSiteInterval     1
    DOSBlockingPeriod   300
</IfModule>

# Block malicious bots and scrapers
RewriteCond %{HTTP_USER_AGENT} ^$ [OR]
RewriteCond %{HTTP_USER_AGENT} (libwww-perl|wget|python|nikto|curl|scan|java|winhttp|clshttp|loader|harvest|extract|grab|miner) [NC,OR]
RewriteCond %{HTTP_USER_AGENT} (bot|crawl|slurp|spider) [NC]
RewriteCond %{HTTP_USER_AGENT} !(googlebot|bingbot|slurp|duckduckbot|baiduspider|yandexbot|facebookexternalhit|twitterbot|rogerbot|linkedinbot|embedly|quora\ link\ preview|showyoubot|outbrain|pinterest|slackbot|vkShare|W3C_Validator) [NC]
RewriteRule .* - [F,L]

# Block common attack patterns
RewriteCond %{QUERY_STRING} (\<|%3C).*script.*(\>|%3E) [NC,OR]
RewriteCond %{QUERY_STRING} GLOBALS(=|\[|\%[0-9A-Z]{0,2}) [OR]
RewriteCond %{QUERY_STRING} _REQUEST(=|\[|\%[0-9A-Z]{0,2}) [OR]
RewriteCond %{QUERY_STRING} ^.*(\<|\>|\'|\"|\;|\?|\*|=$).* [NC,OR]
RewriteCond %{QUERY_STRING} (null|\\x00|\\x04|\\x08|\\x0d|\\x1b|\\x20|\\x3c|\\x3e|\\x7f) [NC,OR]
RewriteCond %{QUERY_STRING} (cmd|exec|concat|union|select|insert|update|delete) [NC]
RewriteRule .* - [F,L]

# Block suspicious requests
RewriteCond %{REQUEST_METHOD} ^(TRACE|TRACK|OPTIONS|HEAD) [NC]
RewriteRule .* - [F,L]

# Limit request size
LimitRequestBody 10485760

# =============================================================================
# PERFORMANCE OPTIMIZATION
# =============================================================================

# GZIP Compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE text/javascript
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE application/json
    AddOutputFilterByType DEFLATE image/svg+xml
</IfModule>

# Browser Caching
<IfModule mod_expires.c>
    ExpiresActive On
    
    # Images - Cache for 1 year
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/ico "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"
    
    # CSS and JavaScript - Cache for 1 month
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"
    
    # Fonts - Cache for 1 year
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType application/font-woff "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"
    ExpiresByType application/vnd.ms-fontobject "access plus 1 year"
    ExpiresByType application/x-font-ttf "access plus 1 year"
    
    # HTML - Cache for 1 hour
    ExpiresByType text/html "access plus 1 hour"
    
    # JSON and XML - Cache for 1 hour
    ExpiresByType application/xml "access plus 1 hour"
    ExpiresByType application/json "access plus 1 hour"
    
    # Default cache
    ExpiresDefault "access plus 1 week"
</IfModule>

# Cache-Control Headers
<IfModule mod_headers.c>
    # Images - Long cache with immutable
    <FilesMatch "\.(jpg|jpeg|png|gif|ico|svg|webp)$">
        Header set Cache-Control "max-age=31536000, public, immutable"
    </FilesMatch>
    
    # CSS and JS - Medium cache
    <FilesMatch "\.(css|js)$">
        Header set Cache-Control "max-age=2592000, public"
    </FilesMatch>
    
    # Fonts - Long cache with immutable
    <FilesMatch "\.(woff|woff2|ttf|eot)$">
        Header set Cache-Control "max-age=31536000, public, immutable"
    </FilesMatch>
    
    # HTML - No cache for dynamic content
    <FilesMatch "\.(html|htm)$">
        Header set Cache-Control "no-cache, no-store, must-revalidate"
        Header set Pragma "no-cache"
        Header set Expires "0"
    </FilesMatch>
</IfModule>

# =============================================================================
# SEO OPTIMIZATION
# =============================================================================

# Language-based redirects for SEO (optional)
# RewriteCond %{HTTP_ACCEPT_LANGUAGE} ^de [NC]
# RewriteCond %{REQUEST_URI} ^/$
# RewriteCond %{QUERY_STRING} !lang=
# RewriteRule ^(.*)$ /?lang=de [R=302,L]

# Remove trailing slashes
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{THE_REQUEST} /+[^?]+?/+[\s?] [NC]
RewriteRule ^(.*)/ /$1 [R=301,L]

# =============================================================================
# FILE ACCESS CONTROL
# =============================================================================

# Protect sensitive files
<FilesMatch "\.(htaccess|htpasswd|txt|log|md|sql|conf)$">
    <RequireAll>
        Require all denied
    </RequireAll>
</FilesMatch>

# Allow robots.txt
<Files "robots.txt">
    <RequireAll>
        Require all granted
    </RequireAll>
</Files>

# Allow sitemap.xml
<Files "sitemap.xml">
    <RequireAll>
        Require all granted
    </RequireAll>
</Files>

# =============================================================================
# MIME TYPES
# =============================================================================

<IfModule mod_mime.c>
    # Fonts
    AddType application/font-woff .woff
    AddType application/font-woff2 .woff2
    AddType application/vnd.ms-fontobject .eot
    AddType application/x-font-ttf .ttf
    
    # Images
    AddType image/svg+xml .svg
    AddType image/webp .webp
    
    # Data files
    AddType application/json .json
    AddType application/ld+json .jsonld
    
    # JavaScript
    AddType application/javascript .js
    
    # Manifest
    AddType application/manifest+json .webmanifest
</IfModule>

# =============================================================================
# ADDITIONAL OPTIMIZATIONS
# =============================================================================

# ETags for better caching
<IfModule mod_headers.c>
    FileETag MTime Size
</IfModule>

# Hotlinking protection (optional)
# RewriteCond %{HTTP_REFERER} !^$
# RewriteCond %{HTTP_REFERER} !^https?://(www\.)?florian-hunter\.de [NC]
# RewriteCond %{REQUEST_FILENAME} \.(jpg|jpeg|png|gif|svg|webp)$ [NC]
# RewriteRule \.(jpg|jpeg|png|gif|svg|webp)$ - [F]

# Custom error pages (redirect to main page for SPA)
ErrorDocument 404 /index.html
ErrorDocument 403 /index.html

# =============================================================================
# CHARSET
# =============================================================================
AddDefaultCharset utf-8
